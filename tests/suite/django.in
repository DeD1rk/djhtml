<!-- Basic everyday Django template -->
{% load static %}
{% block content %}
{% if request.user.is_authenticated %}
<h1>Welcome, {{ request.user }}</h1>
{% else %}
<a href="{% url 'login' %}">Click here to login</a>
{% endif %}
{% endblock %}


<!-- Django tags within <style> -->
<style>
a {
{% block color %}
color: red;
{% endblock %}
}
</style>


<!-- Django tags within <script> -->
<script>
$(function() {
{% if verbose %}
console.log("Hi mom!");
{% endif %}
});
</script>


